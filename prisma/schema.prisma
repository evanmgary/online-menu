datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Store {
  id            Int        @id @default(autoincrement())
  name          String
  address       String?
  categories    Category[]
  currentOrders Order[]
}

model Category {
  id      Int    @id @default(autoincrement())
  name    String
  items   Item[]
  Store   Store? @relation(fields: [storeId], references: [id])
  storeId Int?
}

model Item {
  id         Int       @id @default(autoincrement())
  name       String
  code       String?
  desc       String
  basePrice  Decimal   @db.Money
  options    Json
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
}

model OrderItem {
  id      Int     @id @default(autoincrement())
  text    String
  price   Decimal @db.Money
  Order   Order?  @relation(fields: [orderId], references: [id])
  orderId Int?
}

model Order {
  id         Int         @id @default(autoincrement())
  name       String
  phone      String?
  email      String
  orderItems OrderItem[]
  Store      Store?      @relation(fields: [storeId], references: [id])
  storeId    Int?
}
